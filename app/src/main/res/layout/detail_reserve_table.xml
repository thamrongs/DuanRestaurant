<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:baselineAligned="false"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7.44">


                <ImageView
                    android:layout_width="440dp"
                    android:layout_height="332dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/table_blank_detail"
                    android:layout_weight="0.23"
                    android:layout_marginLeft="-35dp" />

                <Button
                    android:layout_width="192dp"
                    android:layout_height="69dp"
                    android:id="@+id/imageButton3"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/boxinput"
                    android:layout_marginBottom="50dp"
                    android:text="เวลาจอง"
                    android:textSize="40dp"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center"
                    android:src="@drawable/cycle_blank"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="95dp"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center"
                    android:src="@drawable/num_1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-20dp" />


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.68">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="เบอร์โทร :"
                    android:id="@+id/textView17"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/icons"
                    android:layout_marginTop="-3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ชื่อผู้จอง :"
                    android:id="@+id/textView18"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/icons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="จำนวนคน :"
                    android:id="@+id/textView"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0906206206"
                    android:id="@+id/textView3"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6"
                    android:id="@+id/textView11"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="อิทธิพัทธ์ รัตนอารักษ์"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="1dp" />

            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03">

            <Button
                android:layout_width="167dp"
                android:layout_height="55dp"
                android:text="นั่ง"
                android:id="@+id/button4"
                android:layout_gravity="right|center_vertical"
                android:textSize="20dp" />

            <Button
                android:layout_width="169dp"
                android:layout_height="55dp"
                android:text="ยกเลิกการจอง"
                android:id="@+id/button3"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"
                android:onClick="onClickBookTable" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>